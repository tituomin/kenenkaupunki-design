<% family_icon_single = "maki-lodging" %>
<% family_icon_couple = "maki-toilet" %>
<% family_icon_withkids = "maki-school" %>
<% family_icon_group = "maki-theatre" %>
<% family_icon_other = "maki-town-hall" %>
  
<% family_percent_single = "45" %>
<% family_percent_couple = "10" %>
<% family_percent_withkids = "5" %>
<% family_percent_group = "25" %>
<% family_percent_other = "5" %>
  
<% family_title = "Elämäntilanne, asumismuoto" %>
  
<% family_label_single = "Yksin" %>
<% family_label_couple = "Pariskunta" %>
<% family_label_withkids = "Lapsiperhe" %>
<% family_label_group = "Yhteisö" %>
<% family_label_other = "Muu" %>

<div class="summary-header">
  <div class="summary-icon summary-icon--color-3">
      <i class="maki-school"></i>
  </div>
  <h3><%= family_title %></h3>
</div>
<div class="summary-content">
  <div class="choice-chart">
    
    <div class="choice-column choice-color-single" data-choice="single">
      <div class="choice-icon"><i class="<%= family_icon_single %>"></i></div>
      <span class="choice-label"><%= family_label_single %></span>
      <div class="choice-line-container"><div class="choice-line choice-1" style="width: <%= family_percent_single %>%"></div>
      </div>
      <div class="choice-value"><%= family_percent_single %>%</div>
    </div>
    <div class="choice-column choice-color-couple" data-choice="couple">
      <div class="choice-icon"><i class="<%= family_icon_couple %>"></i></div>
      <span class="choice-label"><%= family_label_couple %></span>
      <div class="choice-line-container"><div class="choice-line choice-2" style="width: <%= family_percent_couple %>%"></div></div>
      <div class="choice-value"><%= family_percent_couple %>%</div>
    </div>
    <div class="choice-column choice-color-withkids" data-choice="withkids">
      <div class="choice-icon"><i class="<%= family_icon_withkids %>"></i></div>
      <span class="choice-label"><%= family_label_withkids %></span>
      <div class="choice-line-container"><div class="choice-line choice-3" style="width: <%= family_percent_withkids %>%"></div></div>
      <div class="choice-value"><%= family_percent_withkids %>%</div>
    </div>
    <div class="choice-column choice-color-group" data-choice="group">
      <div class="choice-icon"><i class="<%= family_icon_group %>"></i></div>
      <span class="choice-label"><%= family_label_group %></span>
      <div class="choice-line-container"><div class="choice-line choice-4" style="width: <%= family_percent_group %>%"></div></div>
      <div class="choice-value"><%= family_percent_group %>%</div>
     </div>
    <div class="choice-column choice-color-other" data-choice="other">
      <div class="choice-icon"><i class="<%= family_icon_other %>"></i></div>
      <span class="choice-label"><%= family_label_other %></span>
      <div class="choice-line-container"><div class="choice-line choice-5" style="width: <%= family_percent_other %>%"></div></div>
      <div class="choice-value"><%= family_percent_other %>%</div>
    </div>
  </div>
</div>
